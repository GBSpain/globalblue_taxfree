<?xml version="1.0" encoding="utf-8" ?>
<odoo>
	<record id="pos_sale_order_integra" model="ir.ui.view">
		<field name="name">Pos Sale Order integra</field>
		<field name="model">pos.order</field>
		<field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
		<field name="arch" type="xml">
			<field name="pricelist_id" position="after">
				<field name="document_identifier_integra"/>
				<field name="totalGrossAmount" invisible="not document_identifier_integra"/>
				<field name="tff_void" invisible="not document_identifier_integra"/>
				<field name="amount_paid"/>
				<field name="amount_return"/>
			</field>
			<xpath expr="//form/sheet/div" position="before">
				<widget name="web_ribbon" title="TaxFree Voided" bg_color="bg-danger" invisible="not tff_void"/>
			</xpath>
			<xpath expr="//header" position="inside">
				<button
					name="action_print_tax_free"
					type="object"
					string="Print TaxFree PDF"
					invisible="not document_identifier_integra"
				/>
			</xpath>
		</field>
	</record>
</odoo>
