<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="res_config_view_form_inherit_pos_iot_globalblue_free_tax" model="ir.ui.view">
		<field name="name">res.config.form.inherit.pos.iot</field>
		<field name="model">res.config.settings</field>
		<field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
		<field name="arch" type="xml">
			<block id="pos_payment_terminals_section" position="after">
				<block title="Global Blue Free Tax" id="global_blue_free_tax_section">
					<setting>
						<div class="content-group mt16">
							<div class="row mt16">
								<label for="api_url" string="API URL"/>
								<field name="api_url"/>
							</div>
							<div class="row mt16">
								<label for="api_user" string="API Username"/>
								<field name="api_user"/>
							</div>
							<div class="row mt16">
								<label for="api_pass" string="API Password"/>
								<field name="api_pass"/>
							</div>
						</div>
					</setting>
					<setting>
						<div class="content-group mt16">
							<div class="row mt16">
								<label for="ic2_integra_url" string="IC2 Integra Url"/>
								<field name="ic2_integra_url"/>
							</div>
							<div class="row mt16">
								<label for="dev_mode" string="Test mode"/>
								<field name="dev_mode"/>
							</div>
						</div>
					</setting>
				</block>
			</block>
		</field>
	</record>
</odoo>


